{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "trap \"npm run postdev\" INT EXIT && npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "postdev": "npm run services:stop",
    "test": "npm run services:up  && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "posttest": "npm run postdev",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate --migrations-dir infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint",
    "prepare": "husky",
    "commit": "cz",
    "prepare:commit:check": "npx secretlint \"**/*\""
  },
  "author": "Marlon Batista",
  "license": "MIT",
  "description": "",
  "dependencies": {
    "@commitlint/cli": "19.8.1",
    "async-retry": "1.3.3",
    "dotenv": "17.0.0",
    "dotenv-expand": "12.0.2",
    "next": "15.3.4",
    "next-connect": "1.0.0",
    "node-pg-migrate": "7.6.1",
    "pg": "8.16.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "swr": "2.2.5",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.27.5",
    "@commitlint/config-conventional": "19.8.1",
    "@eslint/js": "9.30.0",
    "@next/eslint-plugin-next": "15.3.4",
    "@secretlint/secretlint-rule-preset-recommend": "10.1.1",
    "commitizen": "4.3.1",
    "concurrently": "9.2.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.30.0",
    "eslint-config-next": "15.3.4",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-jest": "29.0.1",
    "globals": "16.2.0",
    "husky": "9.1.7",
    "jest": "30.0.3",
    "prettier": "3.6.2",
    "secretlint": "10.1.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
